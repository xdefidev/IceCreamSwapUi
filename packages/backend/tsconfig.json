{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["next"],
    "declaration": true,
    "noEmit": true,
    "target": "ESNext"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
